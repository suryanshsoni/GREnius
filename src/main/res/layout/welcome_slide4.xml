<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cl_fb"
            android:layout_margin="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/tv_fb_login"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/cornered_shape_layout"
                android:ems="10"
                android:paddingLeft="50dp"
                android:paddingTop="10dp"
                android:text="Login with Facebook"
                android:textColor="#FF2467CB"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_fb_login"
                app:layout_constraintLeft_toLeftOf="@+id/tv_fb_login"
                app:layout_constraintTop_toTopOf="@+id/tv_fb_login"
                app:srcCompat="@drawable/facebook" />

        </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_below="@+id/cl_fb">

        <include layout="@layout/divider"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:background="@color/white"
            android:text="Or"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@+id/cl_fb"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp">


    <LinearLayout
            android:id="@+id/ll_register_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/et_name_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cornered_shape_layout"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:theme="@style/EditTextRegister" />

            <EditText
                android:id="@+id/et_pwd_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cornered_shape_layout"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:theme="@style/EditTextRegister" />

            <EditText
                android:id="@+id/et_email_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/cornered_shape_layout"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:theme="@style/EditTextRegister" />

            <EditText
                android:id="@+id/et_num_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/cornered_shape_layout"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Mobile No."
                android:inputType="number"
                android:theme="@style/EditTextRegister" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/et_city_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:theme="@style/EditTextRegister"
                    android:ems="10"
                    android:hint="City"
                    android:inputType="text"
                    android:background="@drawable/cornered_shape_layout"/>

                <EditText
                    android:id="@+id/et_country_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:theme="@style/EditTextRegister"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Country"
                    android:background="@drawable/cornered_shape_layout"
                    android:inputType="text" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/cornered_shape_layout"
                android:elevation="9dp"
                android:text="Register"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
