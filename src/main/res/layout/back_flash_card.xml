<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_layout_back"
        android:layout_width="290dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="24dp"
        app:cardBackgroundColor="@color/negative_bg"
        app:cardCornerRadius="18dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/tv_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="15dp"
            android:text="TAP TO FLIP"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RelativeLayout
            android:id="@+id/rl_flashcard_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_flashcard_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_flashcard_synonym"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="The Irishmen were denied asylum in France."
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_flashcard_meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:text="Word Meaning"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_flashcard_synonym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_flashcard_meaning"
                android:layout_centerHorizontal="true"
                android:text="abase, debase"
                android:textAlignment="center"
                android:textSize="24sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>