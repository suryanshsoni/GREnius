<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/ll_word_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tensai.grenius.view.SlideTextView
                android:id="@+id/tv_word_sno"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="10."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:font="ZillaSlab-Medium.ttf"/>


            <com.tensai.grenius.view.SlideTextView
                android:id="@+id/tv_word_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peccadillo"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                app:font="ZillaSlab-Medium.ttf"/>

            <com.tensai.grenius.view.SlideTextView
                android:id="@+id/tv_word_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:text="(Noun)"
                android:textSize="16sp"
                app:font="ZillaSlab-Medium.ttf"/>

        </LinearLayout>

        <com.tensai.grenius.view.SlideTextView
            android:id="@+id/tv_word_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="Meaning"
            android:textSize="16sp"
            app:font="AnticSlab-Regular.ttf"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

