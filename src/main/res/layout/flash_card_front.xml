<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_front"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_layout_front"
        android:layout_width="290dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="24dp"
        app:cardBackgroundColor="@color/negative_bg"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_bookmark_unselected" />

        <TextView
            android:id="@+id/tv_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="15dp"
            android:text="TAP TO FLIP"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RelativeLayout
            android:id="@+id/rl_flashcard_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_reveal_translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_flashcard_pos"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="REVEAL HINDI TRANSLATION"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_flashcard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:text="Word Title"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_audio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_flashcard_title"
                android:src="@drawable/ic_speaker"/>

            <TextView
                android:id="@+id/tv_flashcard_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_flashcard_title"
                android:layout_centerHorizontal="true"
                android:text="(Part of speech)"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>