<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:id="@+id/wordofday_bookmark"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_bookmark_unselected"
                        android:tint="@color/black"/>

                    <ImageView
                        android:id="@+id/wordofday_share"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:tint="@color/black"
                        app:srcCompat="@drawable/ic_share_black" />
                </LinearLayout>



                <com.tensai.grenius.view.SlideTextView
                    android:id="@+id/txtLabelSynonym_cardback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Synonyms"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentStart="true"
                    app:font="ZillaSlab-Medium.ttf"/>

                <com.tensai.grenius.view.SlideTextView
                    android:id="@+id/txtSynonym_cardback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLabelSynonym_cardback"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:font="AnticSlab-Regular.ttf" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">

                <com.tensai.grenius.view.SlideTextView
                    android:id="@+id/txtLabelSentence_cardback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Example"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    app:font="ZillaSlab-Medium.ttf"/>

                <com.tensai.grenius.view.SlideTextView
                    android:id="@+id/txtSentence_cardback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLabelSentence_cardback"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:font="AnticSlab-Regular.ttf" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>