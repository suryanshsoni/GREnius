<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tensai.grenius.ui.home.dashboard_fragment.DashboardFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/word_layout"
                layout="@layout/dashboard_wordofday_layout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <com.tensai.grenius.view.SlideTextView
                android:id="@+id/lastWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:font="ZillaSlab-Medium.ttf"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_below="@+id/word_layout"
                android:text="Click here to view last Word of Days"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/articlesView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="60dp"
                android:clipToPadding="false"
                android:layout_below="@+id/lastWords"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
